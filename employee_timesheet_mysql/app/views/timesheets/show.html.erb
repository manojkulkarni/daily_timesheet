<% curr_date = nil %>
<div class="timeSheetTableDiv">
  <table class="timeSheetTable">
    <% @user_data.each do |user| %>
      <% if curr_date.nil? || !curr_date.eql?(user.date) %>
        <tr>
          <th colspan="3"> Date : <%= user.date.strftime("%d-%m-%Y") %> </th>
        </tr>
        <tr>
        <th> Time From </th>
        <th> Time to </th>
        <th> Task done </th>
      </tr>
      <% end %>
      <tr>
        <td> <%= user.time_from %> </td>
        <td> <%= user.time_to %> </td>
        <td> <%= user.task %> </td>
      </tr>
      <% curr_date = user.date %>
    <% end %>
  </table>
</div>