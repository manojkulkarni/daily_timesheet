<div class="loginForm">
  <h3>Login Here</h3>
  <%= form_for :user, :url => sessions_path do |f| %>
    <table class="tableLogin">
      <tr>
        <td>User Name: </td>
        <td><%= f.text_field :user_name %><br/></td>
      </tr>
      <tr>
        <td>Password:</td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td></td>
        <td> <p style="font-size: small"><%= f.submit 'Login' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
           New User? <%= link_to 'Sign-up', new_user_path %></p></td>
      </tr>
    </table>
  <% end %>
</div>
