<% curr_date = nil %>
<div class="timeSheetTableDiv">
  <div style="text-align: center">
    <h3>  Time-sheet for:-  <%= @user_name.first.user_name.to_s %></h3>
    <br/>
  </div>
  <table class="timeSheetTable">
    <% @user_data.each do |user| %>
      <% if curr_date.nil? || !curr_date.eql?(user.date) %>
        <tr>
          <th colspan="3">
            Date : <%= user.date.strftime("%d-%m-%Y") %> &nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to 'Approve', approval_path(params[:id],user.date) %> / <%= link_to 'Reject', reject_path(params[:id],user.date) %>
          </th>
        </tr>
        <tr>
          <th> Time From </th>
          <th> Time to </th>
          <th> Task done </th>
        </tr>
      <% end %>
      <tr>
        <td> <%= user.time_from %> </td>
        <td> <%= user.time_to %> </td>
        <td> <%= user.task %> </td>
      </tr>
      <% curr_date = user.date %>
    <% end %>
  </table>
</div>