<!DOCTYPE html>
<html>
  <head>
    <title>EmployeeTimesheet</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="applicationDiv">
      <div class="header">
        <%= render 'shared/header' %>
      </div>
      <% if notice %>
        <div>
          <div class='success'><%= notice %></div>
        </div>
      <% end %>

      <% if alert %>
        <div>
          <div class='alert'><%= alert %></div>
        </div>
      <% end %>
      <%= yield %>
      <div class="footer">
        <%= render 'shared/footer' %>
      </div>
    </div>
  </body>
</html>
