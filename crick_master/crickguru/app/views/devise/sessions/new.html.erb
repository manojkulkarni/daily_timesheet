<%#*<div class="background_image_login">%>
  <div class="container form-signin">
    <h2 class="form-signin-heading">Sign in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, :placeholder => 'Email address', :class => 'form-control required autofocus' %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control required autofocus' %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>

      <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
<%#*</div>%>